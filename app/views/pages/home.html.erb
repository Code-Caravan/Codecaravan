          <h3>Cesar Corregiari</h3>
          <p>Back-end developer</p>
        </div>
      </div>
      <div class="card_debora">
        <%= image_tag("Debora@2x.png") %>
        <div class="border-card">
          <h3>Debora Pinheiro</h3>
          <p>Front-end developer</p>
        </div>
      </div>
      <div class="card_joao">
        <%= image_tag('Joao@2x.png') %>
        <div class="border-card">
          <h3>João<br>
            Alves</h3>
          <p>Back-end developer</p>
        </div>
      </div>
    </div>
  </div>
  <div class="form-section" id="contact">
    <div class="form-section__line"></div>
    <div class="form-section__container">
      <div class="form-section__introduction">
        <p>Entre em contato <i class="fas fa-arrow-right"></i></p>
      </div>
      <div class="form-section__group">
        <%= simple_form_for @page, html: { class: "form-home"} do |f| %>
          <%= f.input :name, label: "Nome", placeholder: "Nome" %>
          <%= f.input :email, label: "Email", placeholder: "Email" %>
          <%= f.input :phone, required: false, label: "Telefone", placeholder: "(XX) XXXXX-XXXX " %>
          <%= f.input :message, label: "Mensagem", placeholder: "Mensagem" %>
          <%# <%= f.submit value: t('.send'), class: 'btn btn-dark float-right' %>
          <%= f.button :submit, 'Enviar', :class=> "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
