        </ul>
      </div>
      <div class="areas__cards">
        <%= image_tag('design-icon-color.svg') %>
        <h3>Design</h3>
        <ul>
          <li>E-books e editoração</li>
          <li>Identidade visual</li>
          <li>Material corporativo</li>
        </ul>
      </div>
      <div class="areas__icon"></div>
